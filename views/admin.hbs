<div class="container">

  <form action="/admin/add" method="get">
    <button class="btn btn-outline-dark" type="submit" name="button">
      Add new manager
    </button>
  </form>
  <p></p>
  {{#if managers.length}}
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <!-- <th scope="col">#</th> -->
          <th scope="col">email</th>
          <th scope="col">username</th>
          <th scope="col">phonenumber</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each managers}}
        <tr>
          <!-- <th scope="row">{{@index}}</th> -->
          <td>{{this.email}}</td>
          <td>{{this.username}}</td>
          <td>{{this.phonenumber}}</td>
          <td>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <form action="/admin/edit/{{this.email}}" method="get">
                  <button class="btn btn-sm btn-secondary" type="submit" name="button">Edit</button>
                </form>

                <form action="/admin/remove/{{this.email}}" method="get">
                  <button class="btn btn-sm btn-outline-dark" type="submit" name="button">Remove</button>
                </form>

                <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Buy</button> -->
                <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Read</button> -->
              </div>
              <!-- <small class="text-muted">{{this.amount}}</small> -->
            </div>
            <!-- <div class="row">
              <form action="/admin/edit/{{this.email}}" method="get">
                <button class="btn btn-secondary" type="submit" name="button">Edit</button>
              </form>
              <span style="padding-right: 5px"></span>
              <form action="/admin/remove/{{this.email}}" method="get">
                <button class="btn btn-outline-dark" type="submit" name="button">Remove</button>
              </form>
            </div> -->
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="text-center">Have no managers yet.</p>
  {{/if}}

</div>
