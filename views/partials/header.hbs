<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">

    <div class="container">
      {{#if isAdmin}}
      <div class="mr-auto">
        <a href="#" class="navbar-brand d-flex align-items-center">
          <strong>librabok</strong>
        </a>
      </div>
      {{else}}
        <div class="mr-auto">
          <a href="/" class="navbar-brand d-flex align-items-center">
            <strong>librabok</strong>
          </a>
        </div>
      {{/if}}


      <div class="ml-auto">
        {{#if isAuthorized}}
          {{#if isAdmin}}
            <form action="/logout" method="get">
              <button class="btn btn-secondary" type="submit" name="button">Logout</button>
            </form>
          {{else}}
            <div class="dropdown">
              <button class="btn btn-secondary" type="button" id="dropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownProfile">
                <form action="/profile" method="get">
                  <button class="dropdown-item" type="submit" name="button">
                    My Profile
                  </button>
                </form>
                <form action="/offers" method="get">
                  <button class="dropdown-item" type="submit" name="button">
                    My Offers
                  </button>
                </form>
                <div class="dropdown-divider"></div>
                <form action="/logout" method="get">
                  <button class="dropdown-item" type="submit" name="button">Logout</button>
                </form>
              </div>
            </div>
          {{/if}}

        {{else}}
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <form action="/signIn" method="get">
                <button class="btn btn-sm btn-secondary" type="submit" name="button">SignIn</button>
              </form>
              <form action="/signUp" method="get">
                <button class="btn btn-sm btn-outline-secondary" type="submit" name="button">SignUp</button>
              </form>
            </div>
          </div>
          <!-- <div class="row">
            <div class="col">
              <form action="/signIn" method="get">
                <button class="btn btn-secondary" type="submit" name="button">SignIn</button>
              </form>
            </div>

            <div class="col">
              <form action="/signUp" method="get">
                <button class="btn btn-secondary" type="submit" name="button">SignUp</button>
              </form>
            </div>
          </div> -->
        {{/if}}
      </div>

    </div>

  </nav>

</header>
