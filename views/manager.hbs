  {{#if offers.length}}
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <!-- <th scope="col">#</th> -->
          <th scope="col">Book ID</th>
          <th scope="col">Email</th>
          <th scope="col">City</th>
          <th scope="col">Post</th>
          <th scope="col">Phone</th>
          <th scope="col">Status</th>
          <th scope="col"></th>
